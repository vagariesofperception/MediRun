<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/graphLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/medi_color_bkgnd"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/graphTable"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="40sp"
        android:stretchColumns="1"
         >

        <TableRow android:layout_weight="0.85">

            <LinearLayout android:id="@+id/chart"
                android:layout_weight="1"
 >
            </LinearLayout>
            
        </TableRow>
        <TableRow android:layout_weight="0.15">
          
             <Button
        android:id="@+id/backUpBtn"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:onClick="backUpBtnClick"
        android:text="@string/backUpBtnTxt"
        android:layout_weight="0.4" />
               <TextView
                android:id="@+id/graphEmpty"
                android:layout_height="wrap_content"
                android:background="@color/medi_color_bkgnd"
                android:textColor="@color/medi_color_bkgnd"
                android:textSize="15sp"
                android:layout_weight="0.2" />
                <Button
        android:id="@+id/restoreBtn"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:onClick="restoreBtnClick"
        android:text="@string/restoreBtnTxt"
        android:layout_weight="0.4" />
             
        </TableRow>
    </TableLayout>

</RelativeLayout>